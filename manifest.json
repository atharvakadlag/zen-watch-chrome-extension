{
  "manifest_version": 2,
  "name": "Zen Watch",
  "version": "1",
  "description": "Bring your youtube video or playlist to zen-watch with just one click. ",
  "author": "Atharva Kadlag",
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png"
  },
  "permissions": ["tabs", "activeTab", "declarativeContent", "storage"],
  "background": { "scripts": ["scripts/background.js"], "persistent": false },
  "page_action": {
    "default_popup": "ui/popup.html",
    "default_title": "Watch in Zen-Mode",
    "default_icons": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png"
    }
  }
}
