{
  "manifest_version": 2,
  "name": "Zen Watch",
  "version": "1",
  "description": "Bring your youtube playlist to zen-watch with just one click. bleh",
  "author": "Atharva Kadlag",
  "browser_action": {
    "default_icon": "logo.png",
    "default_title": "Watch in Zen-Mode"
  },
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["jquery-3.5.1.min.js", "content.js"]
    }
  ],
  "background": { "scripts": ["background.js"] }
}
